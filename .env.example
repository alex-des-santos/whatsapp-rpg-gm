# ==========================================
# CONFIGURAÇÕES WHATSAPP EVOLUTION API
# ==========================================

# URL base da Evolution API (obrigatório)
EVOLUTION_API_URL=https://sua-evolution-api.com

# Chave de API da Evolution (obrigatório)
EVOLUTION_API_KEY=sua_chave_evolution_api

# Nome da instância do WhatsApp (obrigatório)
INSTANCE_NAME=sua_instancia_whatsapp

# Token de verificação do webhook (mínimo 12 caracteres)
VERIFY_TOKEN=seu_token_verificacao_muito_seguro_12345

# ==========================================
# CONFIGURAÇÕES DE INTELIGÊNCIA ARTIFICIAL
# ==========================================

# Provedor de IA principal (openai, google, anthropic, local)
AI_PROVIDER=openai

# Chaves de API para provedores de IA
OPENAI_API_KEY=sk-sua_chave_openai
GOOGLE_API_KEY=sua_chave_google_ai
ANTHROPIC_API_KEY=sk-ant-sua_chave_anthropic

# Configurações para IA local (opcional)
LOCAL_LLM_URL=http://localhost:11434
LOCAL_LLM_MODEL=llama2

# Configurações de comportamento da IA
AI_MAX_TOKENS=2000
AI_TEMPERATURE=0.7
AI_TOP_P=0.9

# ==========================================
# CONFIGURAÇÕES DE BANCO DE DADOS
# ==========================================

# URL completa do banco PostgreSQL
DATABASE_URL=postgresql://rpg_user:rpg_password@postgres:5432/rpg_db

# Configurações individuais do banco (para referência)
DB_HOST=postgres
DB_PORT=5432
DB_NAME=rpg_db
DB_USER=rpg_user
DB_PASSWORD=rpg_password

# Pool de conexões
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# ==========================================
# CONFIGURAÇÕES DE CACHE REDIS
# ==========================================

# URL completa do Redis
REDIS_URL=redis://:redis_password@redis:6379/0

# Configurações individuais do Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_password
REDIS_DB=0

# TTL padrão para cache (em segundos)
REDIS_TTL=3600

# ==========================================
# CONFIGURAÇÕES DE SEGURANÇA
# ==========================================

# Chave secreta para JWT (mínimo 32 caracteres)
SECRET_KEY=sua_chave_secreta_jwt_muito_longa_e_segura_123456789

# Algoritmo de hash para senhas
PASSWORD_HASH_ALGORITHM=bcrypt

# Tempo de expiração do token JWT (em minutos)
JWT_EXPIRATION_MINUTES=1440

# Salt para hash de senhas
PASSWORD_SALT_ROUNDS=12

# ==========================================
# CONFIGURAÇÕES DE APLICAÇÃO
# ==========================================

# Ambiente de execução (development, staging, production)
ENVIRONMENT=development

# Nível de log (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Tamanho máximo de arquivo de log (em MB)
LOG_MAX_SIZE=10

# Número máximo de arquivos de log para rotação
LOG_BACKUP_COUNT=5

# Porta da aplicação principal
APP_PORT=8000

# Host da aplicação
APP_HOST=0.0.0.0

# ==========================================
# CONFIGURAÇÕES DE RPG
# ==========================================

# Sistema de RPG padrão (dnd5e, pathfinder, custom)
DEFAULT_RPG_SYSTEM=dnd5e

# Máximo de personagens por jogador
MAX_CHARACTERS_PER_PLAYER=3

# Nível máximo permitido para personagens
MAX_CHARACTER_LEVEL=20

# XP automático por sessão
AUTO_XP_PER_SESSION=100

# Permitir criação de personagens personalizados
ALLOW_CUSTOM_CHARACTERS=true

# ==========================================
# CONFIGURAÇÕES DE WEBHOOK
# ==========================================

# URL para receber webhooks externos
WEBHOOK_URL=https://seu-dominio.com/webhook

# Timeout para requests de webhook (em segundos)
WEBHOOK_TIMEOUT=30

# Número de tentativas para webhook
WEBHOOK_RETRY_ATTEMPTS=3

# ==========================================
# CONFIGURAÇÕES DE BACKUP
# ==========================================

# Habilitar backup automático
ENABLE_AUTO_BACKUP=true

# Intervalo de backup automático (em horas)
BACKUP_INTERVAL_HOURS=24

# Número máximo de backups a manter
MAX_BACKUP_FILES=7

# Compressão de backups
BACKUP_COMPRESSION=gzip

# ==========================================
# CONFIGURAÇÕES DE MONITORAMENTO
# ==========================================

# Habilitar métricas Prometheus
ENABLE_METRICS=true

# Porta para métricas
METRICS_PORT=9090

# Habilitar health checks detalhados
ENABLE_DETAILED_HEALTH_CHECKS=true

# Intervalo de health check (em segundos)
HEALTH_CHECK_INTERVAL=30

# ==========================================
# CONFIGURAÇÕES DE DESENVOLVIMENTO
# ==========================================

# Modo debug (apenas para desenvolvimento)
DEBUG=false

# Reload automático do código (apenas para desenvolvimento)
AUTO_RELOAD=true

# Habilitar CORS para desenvolvimento
ENABLE_CORS=true

# Origens permitidas para CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# ==========================================
# CONFIGURAÇÕES OPCIONAIS
# ==========================================

# Timezone da aplicação
TIMEZONE=America/Sao_Paulo

# Idioma padrão
DEFAULT_LANGUAGE=pt-BR

# Formato de data padrão
DATE_FORMAT=%d/%m/%Y %H:%M:%S

# Tamanho máximo de arquivo de upload (em MB)
MAX_UPLOAD_SIZE=10

# Extensões de arquivo permitidas para upload
ALLOWED_EXTENSIONS=.png,.jpg,.jpeg,.gif,.pdf,.txt

# ==========================================
# INSTRUÇÕES DE CONFIGURAÇÃO
# ==========================================

# 1. Copie este arquivo para .env
# 2. Substitua todos os valores de exemplo pelas suas credenciais reais
# 3. Certifique-se de que o VERIFY_TOKEN tenha pelo menos 12 caracteres
# 4. Configure pelo menos um provedor de IA
# 5. Verifique se as URLs estão corretas e acessíveis
# 6. Para produção, use valores seguros para SECRET_KEY e senhas
# 7. Nunca commite o arquivo .env para controle de versão