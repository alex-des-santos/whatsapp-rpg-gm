# =================================
# CONFIGURAÇÕES ESSENCIAIS
# =================================

# Evolution API Configuration
EVOLUTION_API_URL=http://localhost:8080
EVOLUTION_API_KEY=sua-chave-api-evolution
EVOLUTION_INSTANCE_NAME=rpg-gm-bot

# Webhook Configuration (URL pública para receber mensagens)
WEBHOOK_URL=https://sua-url-publica.com/webhook
WEBHOOK_TOKEN=token-seguro-para-webhook

# Segurança
SECRET_KEY=chave-secreta-muito-segura-aqui
API_VERSION=v1

# =================================
# PROVEDORES DE IA (Configure pelo menos um)
# =================================

# OpenAI
OPENAI_API_KEY=sk-sua-chave-openai
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=1000

# Anthropic Claude
ANTHROPIC_API_KEY=sua-chave-anthropic
ANTHROPIC_MODEL=claude-3-sonnet-20240229
ANTHROPIC_TEMPERATURE=0.6

# Google AI
GOOGLE_API_KEY=sua-chave-google
GOOGLE_MODEL=gemini-pro
GOOGLE_TEMPERATURE=0.8

# OpenRouter
OPENROUTER_API_KEY=sua-chave-openrouter
OPENROUTER_MODEL=meta-llama/llama-2-70b-chat

# Local Ollama
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3:8b

# =================================
# BANCO DE DADOS
# =================================

# PostgreSQL
DATABASE_URL=postgresql://rpg_user:senha@localhost:5432/rpg_gm_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=rpg_gm_db
DB_USER=rpg_user
DB_PASSWORD=senha

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# =================================
# SISTEMA HITL (Human-in-the-Loop)
# =================================

# Discord Notifications
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/seu-webhook
DISCORD_BOT_TOKEN=seu-token-bot-discord

# Email Notifications
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_USER=seu-email@gmail.com
EMAIL_PASSWORD=sua-senha-app
HITL_EMAIL_RECIPIENTS=gm@example.com,admin@example.com

# SMS (Opcional)
TWILIO_ACCOUNT_SID=seu-twilio-sid
TWILIO_AUTH_TOKEN=seu-twilio-token
TWILIO_PHONE_NUMBER=+1234567890

# =================================
# CONFIGURAÇÕES STREAMLIT
# =================================
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost

# =================================
# CONFIGURAÇÕES GRADIO
# =================================
GRADIO_SERVER_PORT=7860
GRADIO_SHARE=false

# =================================
# CONFIGURAÇÕES DE DESENVOLVIMENTO
# =================================

# Ambiente
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Servidor FastAPI
API_HOST=0.0.0.0
API_PORT=3000

# =================================
# CONFIGURAÇÕES OPCIONAIS
# =================================

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Session Timeout
SESSION_TIMEOUT_MINUTES=30

# Backup automatico
AUTO_BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=6

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090