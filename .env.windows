# ==========================================
# CONFIGURAÇÕES PARA WINDOWS 11 (SEM DOCKER)
# ==========================================

# ==========================================
# CONFIGURAÇÕES WHATSAPP EVOLUTION API
# ==========================================

# URL base da Evolution API (obrigatório)
EVOLUTION_API_URL=https://sua-evolution-api.com

# Chave de API da Evolution (obrigatório)
EVOLUTION_API_KEY=sua_chave_evolution_api

# Nome da instância do WhatsApp (obrigatório)
INSTANCE_NAME=sua_instancia_whatsapp

# Token de verificação do webhook (mínimo 12 caracteres)
VERIFY_TOKEN=seu_token_verificacao_muito_seguro_12345

# ==========================================
# CONFIGURAÇÕES DE INTELIGÊNCIA ARTIFICIAL
# ==========================================

# Provedor de IA principal (openai, google, anthropic, local)
AI_PROVIDER=openai

# Chaves de API para provedores de IA
OPENAI_API_KEY=sk-sua_chave_openai
GOOGLE_API_KEY=sua_chave_google_ai
ANTHROPIC_API_KEY=sk-ant-sua_chave_anthropic

# Configurações para IA local (opcional)
LOCAL_LLM_URL=http://localhost:11434
LOCAL_LLM_MODEL=llama2

# Configurações de comportamento da IA
AI_MAX_TOKENS=2000
AI_TEMPERATURE=0.7
AI_TOP_P=0.9

# ==========================================
# CONFIGURAÇÕES DE BANCO DE DADOS (WINDOWS)
# ==========================================

# URL completa do banco PostgreSQL (Windows local)
DATABASE_URL=postgresql://postgres:rpg_password@localhost:5432/rpg_db

# Configurações individuais do banco
DB_HOST=localhost
DB_PORT=5432
DB_NAME=rpg_db
DB_USER=postgres
DB_PASSWORD=rpg_password

# Pool de conexões
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# ==========================================
# CONFIGURAÇÕES DE CACHE REDIS (WINDOWS)
# ==========================================

# URL completa do Redis (Windows local)
REDIS_URL=redis://localhost:6379/0

# Configurações individuais do Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# TTL padrão para cache (em segundos)
REDIS_TTL=3600

# ==========================================
# CONFIGURAÇÕES DE SEGURANÇA
# ==========================================

# Chave secreta para JWT (mínimo 32 caracteres)
SECRET_KEY=sua_chave_secreta_jwt_muito_longa_e_segura_123456789

# Algoritmo de hash para senhas
PASSWORD_HASH_ALGORITHM=bcrypt

# Tempo de expiração do token JWT (em minutos)
JWT_EXPIRATION_MINUTES=1440

# Salt para hash de senhas
PASSWORD_SALT_ROUNDS=12

# ==========================================
# CONFIGURAÇÕES DE APLICAÇÃO (WINDOWS)
# ==========================================

# Ambiente de execução (development, staging, production)
ENVIRONMENT=development

# Nível de log (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Host da aplicação (0.0.0.0 para acesso externo)
APP_HOST=0.0.0.0

# Porta da aplicação
APP_PORT=8000

# Auto-reload em desenvolvimento
AUTO_RELOAD=true

# Modo debug
DEBUG=true

# Tamanho máximo de arquivo de log (em MB)
LOG_MAX_SIZE=10

# Número máximo de arquivos de log
LOG_BACKUP_COUNT=5

# ==========================================
# CONFIGURAÇÕES DE WEBHOOK
# ==========================================

# URL do webhook (opcional - para receber callbacks)
WEBHOOK_URL=http://localhost:8000/webhook

# Timeout para webhook (em segundos)
WEBHOOK_TIMEOUT=30

# Tentativas de retry para webhook
WEBHOOK_RETRY_ATTEMPTS=3

# ==========================================
# CONFIGURAÇÕES DE RPG
# ==========================================

# Número máximo de personagens por jogador
MAX_CHARACTERS_PER_PLAYER=3

# XP necessário para subir de nível (fórmula base)
XP_BASE_MULTIPLIER=1000

# Tempo limite para sessões (em minutos)
SESSION_TIMEOUT=60

# ==========================================
# CONFIGURAÇÕES DE ARQUIVOS (WINDOWS)
# ==========================================

# Diretório para dados do jogo
DATA_DIR=data

# Diretório para logs
LOG_DIR=logs

# Diretório para sessões do WhatsApp
SESSIONS_DIR=sessions

# Diretório para personagens salvos
CHARACTERS_DIR=characters

# Diretório para backups
BACKUPS_DIR=backups

# Diretório para configurações de IA
AI_CONFIGS_DIR=ai_configs

# ==========================================
# CONFIGURAÇÕES DE PERFORMANCE
# ==========================================

# Número de workers (para produção)
WORKERS=4

# Timeout para requisições (em segundos)
REQUEST_TIMEOUT=30

# Tamanho máximo de upload (em MB)
MAX_UPLOAD_SIZE=10

# Rate limiting (requisições por minuto)
RATE_LIMIT=100

# ==========================================
# CONFIGURAÇÕES DE MONITORAMENTO
# ==========================================

# Habilitar métricas
ENABLE_METRICS=true

# Endpoint de métricas
METRICS_ENDPOINT=/metrics

# Habilitar health check detalhado
DETAILED_HEALTH_CHECK=true
